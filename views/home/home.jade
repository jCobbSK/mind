//- home.jade

extends ../layout

block content

  .jumbotron
    textarea#memory-fragment-input.form-control.expandable(rows="3", placeholder="Text comes here...")
    .clearer
    button#memory-submit.btn.btn-primary.lefter Add
    .input-group
      #memory-path-selection-container.righter
      span.input-group-btn
        button.btn.btn-default#memory-path-new New
  .clearer
  .panel.panel-default
    .panel-heading
      .input-group#memory-search-operators(style="display:none;")
        input#memory-search.form-control(type="text", placeholder="Search...")
        span.input-group-btn
          button.btn.btn-default#memory-display-forgotten Include forgotten
    #memory-fragments-container

  include _home_templates