script#memory_fragments_list_tmpl(type="text/html")
  #memory-fragments-label {$label}
  .clearer
  #memory-fragments-list.list-group

script#memory_fragment_tmpl(type="text/html")
  .mind-fragment.list-group-item(id="fragment_{$id}", data-path="{$path.join('|')}") 
    .mind-fragment-updated-time.righter(data-updated="{$updated_at}") {$updated_at_f}
    .mind-fragment-text {$text}
    .mind-fragment-path {$path}


script#memory_fragments_extract_tmpl(type="text/html")
  li#memory-extract
    a#memory-extract-link(href="#") Extract ({$count})

script#memory_wipe_tmpl(type="text/html")
  li#memory-wipe
    a#memory-wipe-link(href="#") Clean


script#memory_path_selection_tmpl(type="text/html")
  select#memory-path-select.form-control

script#memory_path_select_option_tmpl(type="text/html")
  option(value="{$key}") {$name}

script#modal_dialog_template(type="text/html")
  .modal.fade
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-label="Close")
            span(aria-hidden="true") &times;
          h4.modal-title {$title}
        .modal-body
          p {$body}
        .modal-footer
          button.btn.btn-default(type="button", data-dismiss="modal") Close
          button.btn.btn-primary Save changes