script#notification_tmpl(type="text/html")
  .mind-notification.alert.alert-info(id="{$id}") {$message}

script#memory_fragments_list_tmpl(type="text/html")
  #memory-fragments-label {$label}
  .clearer
  #memory-fragments-list.list-group

script#memory_fragment_tmpl(type="text/html")
  .mind-fragment.list-group-item(id="fragment_{$id}", data-path="{$path.join('|')}") 
    .mind-fragment-updated-time.righter(data-updated="{$updated_at}") {$updated_at_f}
    .mind-fragment-text.full-text {$text}
    .mind-fragment-path.righter {$path}
    .liner


script#memory_fragments_extract_tmpl(type="text/html")
  li#memory-extract
    a#memory-extract-link(href="#") Extract ({$count})

script#memory_wipe_tmpl(type="text/html")
  li#memory-wipe
    a#memory-wipe-link(href="#") Clean


script#memory_path_selection_tmpl(type="text/html")
  select#memory-path-select.form-control

script#memory_path_select_option_tmpl(type="text/html")
  option(value="{$key}") {$name}

script#extraction_input_tmpl(type="text/html")
  label Encryption password (Leave empty for no encryption)
    input#extraction-password.form-control(type="password")
  p.small#extraction-password-requirements.full-text {$password_requirements} 
  .clearer
  label Select storage option
    select#extraction-target-select.form-control
      option(value="local", selected) Download (local)
      option(value="remote_mind", style="display:{$remote_mind?'block':'none'};") This site
      option(value="remote_dropbox", style="display:{$remote_dropbox?'block':'none'};") Remote (Dropbox)

script#extraction_input_tmpl(type="text/html")
